<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relation_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_35" >

    <LinearLayout
        android:id="@+id/view_layer2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/btn_love"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ui_button_blue"
            android:contentDescription="@string/desc"
            android:focusable="false"
            android:src="@drawable/ico_heart" />

        <ImageButton
            android:id="@+id/btn_like"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ui_button_blue"
            android:contentDescription="@string/desc"
            android:focusable="false"
            android:src="@drawable/ico_like" />

        <ImageButton
            android:id="@+id/btn_reload"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ui_button_blue"
            android:contentDescription="@string/desc"
            android:focusable="false"
            android:src="@drawable/ico_reload" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_layer1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dim_10" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim_10"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/brave" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:tag="bold"
                android:text="@string/txt_some_title"
                android:textColor="@color/gray_35"
                android:textSize="@dimen/tex_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="3"
                android:text="@string/txt_some_longtext"
                android:textColor="@color/gray_79"
                android:textSize="@dimen/tex_size_small" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>