<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/gray_35_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:background="@color/dark_blue"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:minWidth="480dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioGroup
                android:id="@+id/select_group"
                android:layout_margin="@dimen/dim_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


        <TextView
                android:id="@+id/message"
                android:gravity="center"
                android:text="@string/loading"
                android:textColor="@color/white"
                android:textSize="@dimen/tex_size_xlarge"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:paddingTop="@dimen/dim_30"
                android:paddingBottom="@dimen/dim_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <Button
                style="@style/Button_Blue"
                android:id="@+id/confirm"
                android:text="@string/ok"
                android:paddingTop="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>