<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.zoyi.carryu"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="11"/>

    <application android:label="@string/app_name"
                 android:name=".Application.CUApplication">
        <activity android:name=".Application.Views.Activities.LoginActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Application.Views.Activities.LobbyActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.GameActivity"
                  android:noHistory="true"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.ChampionSelectActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.SummonerDetailActivity"
                  android:noHistory="true"
                  android:theme="@style/AppTheme"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
