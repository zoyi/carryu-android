<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.zoyi.carryu"
          android:versionCode="10"
          android:versionName="1.12">

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>

    <application android:label="@string/app_name"
                 android:icon="@drawable/icon"
                 android:name=".Application.CUApplication">
        <activity android:name=".Application.Views.Activities.SplashActivity"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".Application.Views.Activities.LoginActivity"
                  android:theme="@style/AppTheme" />

        <activity android:name=".Application.Views.Activities.ServerSelectActivity"
                  android:theme="@style/AppTheme" />

        <activity android:name=".Application.Views.Activities.LobbyActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.ChampionSelectActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.InGameActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.SummonerDetailActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.SearchSummonerActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.FacebookPageActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.LoginSelectActivity"
                  android:theme="@style/AppTheme"/>

        <activity android:name=".Application.Views.Activities.SummonerNameLoginActivity"
                  android:theme="@style/AppTheme"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
